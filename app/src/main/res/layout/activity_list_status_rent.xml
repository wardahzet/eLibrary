<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_card_rentstatus"
            android:elevation="20dp"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="93dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/ic_bookcover"
                    android:layout_marginVertical="6dp"
                    android:src="@drawable/ic_books1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_booktitle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="3dp"
                    android:text="The Wiszard of 0Z"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_bookauthor"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:text="By L. Frank Baum "
                    android:textSize="12dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>



            <ImageView
                android:id="@+id/ic_bookstatus"
                android:layout_width="80dp"
                android:layout_height="17dp"
                android:layout_gravity="end"
                android:layout_marginVertical="6dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_status_waiting"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
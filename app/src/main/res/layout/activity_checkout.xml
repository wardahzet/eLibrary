<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_activity.rent.CheckoutActivity">

    <LinearLayout
        android:id="@+id/layout_nav_checkout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="80dp"
        android:background="@drawable/bg_navbar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_back_group"
            android:padding="5dp"
            android:src="@drawable/arrow2"
            tools:layout_editor_absoluteX="6dp"
            tools:layout_editor_absoluteY="46dp" />

        <TextView
            android:id="@+id/txt_co"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginLeft="26px"
            app:layout_constraintStart_toEndOf="@+id/ic_back"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_profileco"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/bg_card_white"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_nav_checkout">

        <LinearLayout
            android:id="@+id/linear_profile1"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Student ID"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />
        </LinearLayout>

<!--        value from profile-->
        <LinearLayout
            android:id="@+id/linear_profile2"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="230dp"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:text=""/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_bookco"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/bg_card_white"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_profileco">

        <LinearLayout
            android:id="@+id/layout_detailbookco"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_card_white"
            android:elevation="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="92dp"
                android:layout_height="120dp"
                android:layout_marginLeft="24dp"
                android:src="@drawable/ic_books1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />


            <LinearLayout
                android:layout_width="270dp"
                android:layout_height="119dp"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_bookname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_name"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_bookauthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/book_author" />

                <TextView
                    android:id="@+id/txt_bookid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="9786020664156" />

                <TextView
                    android:id="@+id/txt_bookgenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Fiction" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_billco"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        tools:ignore="MissingConstraints"
        android:background="@drawable/bg_card_white"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_bookco">

        <LinearLayout
            android:id="@+id/linear_bill1"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/txt_rent_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Rent ID Number"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_rent_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Rent Date"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_return_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Return Date"
                android:textColor="@color/black"
                android:textSize="36px"
                android:textStyle="bold" />
        </LinearLayout>

        <!--        value from date -->
        <LinearLayout
            android:id="@+id/linear_bill2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="260dp"
            android:orientation="vertical"
            android:paddingTop="18dp">

            <TextView
                android:id="@+id/txt_rent_id_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="PIB-25112-AIIS"
                android:textSize="36px" />

            <TextView
                android:id="@+id/txt_rent_date_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textSize="36px" />

            <TextView
                android:id="@+id/txt_return_date_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text=""
                android:textSize="36px" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit_form"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Submit Form"
        android:textSize="20dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
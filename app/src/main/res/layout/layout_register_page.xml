<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_activity.auth.LoginPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/btn_back"
            android:textAllCaps="false"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter Your Personal Information"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Username"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"

            />

        <EditText
            android:id="@+id/in_phoneNumber"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/in_background"
            android:hint="Enter your username"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="#767676" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            />

        <EditText
            android:id="@+id/in_email"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/in_background"
            android:hint="Enter your email"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="#767676" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            />

        <EditText
            android:id="@+id/in_password"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/in_background"
            android:hint="Enter password"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="#767676" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Confirm Password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"

            />

        <EditText
            android:id="@+id/in_confPassword"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/in_background"
            android:hint="Enter confirm password"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:textColorHint="#767676" />


        <Button
            android:id="@+id/btn_daftar"
            android:layout_width="344dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg_login"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
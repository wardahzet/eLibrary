<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_activity.StatusPeminjaman"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_navbar"
        android:elevation="80dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_bg_btn_arrow"
            android:padding="5dp"
            android:src="@drawable/arrow2"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/txt_rentStatustitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="Rent Status"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/bg_card_rentstatus"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/ic_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_book1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_bookTitle"
                android:layout_width="120dp"
                android:layout_height="wrap_content"

                android:layout_marginTop="6dp"
                android:layout_marginBottom="3dp"
                android:text="The Wiszard of 0Z"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="110dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="3dp"
                android:text="By L. Frank Baum "
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_genreBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Fiction"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_bookStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/txt_bg_statusrent"
            android:paddingHorizontal="15dp"
            android:paddingVertical="3dp"
            android:text="Waiting List"
            android:textColor="@color/white"
            android:textSize="10dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>